<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@color/grey_b3b0a3">


    <ProgressBar
        android:id="@+id/pBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:max="100"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pokemon_grey"
        app:layout_constraintBottom_toBottomOf="@id/pBar3"
        app:layout_constraintEnd_toStartOf="@id/iv_p2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/pBar3"
        app:layout_constraintTop_toTopOf="@id/pBar3" />
    <!--            android:tint="@{viewModel.progress.equals(`25`) ? @color/green : @color/blue}"-->

    <ImageView
        android:id="@+id/iv_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pokemon_grey"
        app:layout_constraintBottom_toBottomOf="@id/pBar3"
        app:layout_constraintEnd_toStartOf="@id/iv_p3"
        app:layout_constraintStart_toEndOf="@id/iv_p1"
        app:layout_constraintTop_toTopOf="@id/pBar3" />
    <!--            app:tint="@{progress.equs == `50` ? @color/green : @color/blue}" />-->

    <ImageView
        android:id="@+id/iv_p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pokemon_grey"
        app:layout_constraintBottom_toBottomOf="@id/pBar3"
        app:layout_constraintEnd_toEndOf="@id/pBar3"
        app:layout_constraintStart_toEndOf="@id/iv_p2"
        app:layout_constraintTop_toTopOf="@id/pBar3" />
    <!--            app:tint="@{progress == `75` ? @color/green : @color/blue}" />-->

    <!--            app:tint="@{progress == `100` ? @color/green : @color/blue}" />-->


    <Button
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity 1"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frame_first"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pBar3" />

</androidx.constraintlayout.widget.ConstraintLayout>
