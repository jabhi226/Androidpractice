<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".moduls.periodicAlarmManager.PeriodicManagerActivity">

    <EditText
        android:id="@+id/et_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_start_alarm"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_start_alarm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Both Alarm"
        app:layout_constraintEnd_toStartOf="@id/btn_stop_alarm"
        app:layout_constraintStart_toEndOf="@id/et_time"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_stop_alarm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stop Both Alarm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_start_alarm"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_alarm_manager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rv_work_manager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_start_alarm" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_work_manager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rv_alarm_manager"
        app:layout_constraintTop_toBottomOf="@id/btn_start_alarm" />

</androidx.constraintlayout.widget.ConstraintLayout>