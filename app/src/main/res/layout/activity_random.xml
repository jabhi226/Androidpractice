<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".moduls.random.RandomActivity">

    <View
        android:id="@+id/view_what"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#CC000000"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/rv_what"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_what"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Whats going on"
        android:textSize="36sp"
        android:elevation="8dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/rv_what"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_what"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:itemCount="100"
        tools:listitem="@layout/item_random_box" />

</androidx.constraintlayout.widget.ConstraintLayout>